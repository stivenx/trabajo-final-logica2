{
  "compilerOptions": {
    "target": "ES6",                                 
    "module": "commonjs",    
    "outDir": "./dist",
    "rootDir": "./src",                            
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    "strict": true,                                                          
    "skipLibCheck": true, 
    "typeRoots": ["./node_modules/@types"]                              
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
                                  
  
}
